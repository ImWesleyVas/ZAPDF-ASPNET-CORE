@model ZAPNET.DemoFina.Models.ModeloDF

@{
    ViewData["Title"] = "AddModelo";
}

<h2>Adicionando Novo Modelo</h2>

<h4>Modelo de Demonstração Financeira</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddModelo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" disabled="disabled" />
                <!--span asp-validation-for="Id" class="text-danger"></span-->
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="ListaModelos" class="btn btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
