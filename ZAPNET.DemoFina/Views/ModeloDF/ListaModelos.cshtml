@model IEnumerable<ZAPNET.DemoFina.Models.ModeloDF>

@{
    ViewData["Title"] = "ListaModelos";
    var MesAno = "";
}




<h2>Modelos de Demonstrações</h2>

<div class="container">
    <div id="addModelo" class="col-lg-6" style="padding-top: 18px">
        <a asp-action="AddModelo" class="btn btn-primary">Adicionar Novo Modelo</a>
    </div>
    <form method="post">
        <div class="form-group col-lg-6" style="text-align:right; padding-right:50px">
            <label> Selecione o mês</label>
            <br />
            <!-- SELECIONAR MÊS -->
            <input type="month" id="mes" name="mes" />
            <button type="submit" class="btn btn-success" onclick="GuardaMes()"><strong>OK</strong></button>
            <button class="btn btn-danger" onclick="LimpaMes()"><strong> &Chi; </strong></button>
        </div>
    </form>
</div>



@if (@ViewData["Sucesso"] != null)
{
    <div class="alert-success">@ViewData["Sucesso"]</div>
}


@foreach (var item in Model)
{
    <div class="modal-content">

        <table class="table" style="margin-bottom: 0px;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>
                        <h4><strong>@Html.DisplayFor(modelItem => item.Id)</strong></h4>
                    </td>
                    <td>
                        <h4><strong>@Html.DisplayFor(modelItem => item.Nome)</strong></h4>
                    </td>
                    <td style="display:block; text-align:right">
                        @Html.ActionLink("Editar", "AddModelo", null, new { id = item.Id }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Excluir", "Excluir", null, new { id = item.Id }, new { @class = "btn btn-danger" }) |
                        @Html.ActionLink("Rubricas", "ListaContasDF", "ContaDF", new { id = item.Id }, new { @class = "btn btn-info" })
                    </td>
                </tr>

            </tbody>
        </table>

    </div>
    <br />
}

@section Scripts {

    <script>
    function GuardaMes(string mesAno) {
        @MesAno = mesAno;
    }
    </script>

}